<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"

    tools:context="com.example.dominiczka.doggoproject.DogDetailsFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/DogNameDetails"
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkerTextColor"
            android:gravity="center_horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:padding="8dp"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/DogImage"
            android:paddingTop="8dp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center"/>

    <TextView
        android:id="@+id/dogLongDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/lighterTextColor"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:padding="8dp"
        android:textSize="18sp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/shelterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/shelter_dogs" />

        <Button
            android:id="@+id/shelterButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/shelter_button_text"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</ScrollView>
